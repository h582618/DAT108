package Oppgave2;

public class Waitress extends Thread{

	Burger currentBurger;
	BurgerQueue burgerQueue;
	String name = "Servit√∏r";
	
	public Waitress(BurgerQueue burgerQueue, int i) {
		this.burgerQueue = burgerQueue;
		this.name = name + i;
	}
	
	//Fjern burger
	@Override
	public void run() {
		System.out.println(!burgerQueue.isEmpty());
		while(!burgerQueue.isEmpty()) {
			currentBurger = burgerQueue.takeBurger();
			System.out.println("###" + name +" vil ta en hamburger, men rutsjebanen er tom. Venter! ###");
		}
	
	}
}
