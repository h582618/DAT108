package Oppgave2;

public class Chef extends Thread {

	BurgerQueue burgerQueue;
	String name = "Kokk";
	int burgerNumber = 1;
	
	public Chef(BurgerQueue burgerQueue, int i) {
		this.burgerQueue = burgerQueue;
		this.name = name + i;
	}
	
	//Make burger
	@Override
	public synchronized void run() {
		while(true) {
			try {
				Thread.sleep(2000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			if(!burgerQueue.isFull()){
			Burger newBurger = new Burger(burgerNumber);
			burgerQueue.addBurger(newBurger);
			System.out.println(name + " legger pÃ¥ hamburger ("+newBurger.getNumber()+") => [("+newBurger.getNumber()+")]");
			burgerNumber++;
			}
		}
		
	}
}
