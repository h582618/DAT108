import javax.swing.*;


public class helloWorld extends Thread {

	boolean ferdig = false;

	public Text text;
	
	@Override
	public synchronized void run() {
		while(!ferdig) {
		 text.setText(JOptionPane.showInputDialog("Legg til beskjed"));
		}
		 
	}
	
	public synchronized void stopp() {
		ferdig = true;
	}
	
}
