package Oppgave2;
import java.util.LinkedList;

public class BurgerQueue  {

	public static int maxBurgers = 5;
	LinkedList<Burger> burgerQueue = new LinkedList<Burger>();
	int burgerNumber = 1;
	
	public synchronized void addBurger(Burger burger) throws InterruptedException {
		if(isFull()){
			wait();
		}
			burgerQueue.add(burger);
			if(isFull()) {
				notify();
			}
			
		}
	public synchronized Burger takeBurger() throws InterruptedException {
		
		if(isEmpty()) {
			wait();
		}
		return burgerQueue.pop();
		
	}
	public boolean isFull() {
		return burgerQueue.size() == maxBurgers;
	}
	public boolean isEmpty() {
		return burgerQueue.isEmpty();
	}
	
}
