package Oppgave2;

public class Chef extends Thread {

	BurgerQueue burgerQueue;
	String name = "Kokk";
	int burgerNumber;
	
	public Chef(BurgerQueue burgerQueue, int i) {
		this.burgerQueue = burgerQueue;
		this.name = name + i;
	}
	
	//Make burger
	@Override
	public void run() {
		while(!burgerQueue.isFull()) {
			Burger newBurger = new Burger();
			burgerQueue.addBurger(newBurger,burgerNumber);
			System.out.println(name + " legger pÃ¥ hamburger (1) => [(1)]");
		}
		
	}
}
