package Oppgave2;

public class Waitress extends Thread{

	Burger currentBurger;
	BurgerQueue burgerQueue;
	String name = "ServitÃ¸r";
	
	public Waitress(BurgerQueue burgerQueue, int i) {
		this.burgerQueue = burgerQueue;
		this.name = name + i;
	}
	
	//Fjern burger
	@Override
	public void run() {
		while(true) {
			try {
				Thread.sleep(Chef.getRandom(2000,6000));
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			if(!burgerQueue.isEmpty()) {
			try {
				currentBurger = burgerQueue.takeBurger(name);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			System.out.println(name+" tar av hamburger ("+currentBurger.getNumber()+") => " + burgerQueue.toString());
			
		}
		}
	}
}
